{
    "name": "task-automation-dashboard",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "concurrently -n API,WEB -c auto \"npm:dev:api\" \"npm:dev:web\"",
        "dev:api": "npm --workspace apps/api run dev",
        "dev:web": "npm --workspace apps/web run dev"
    },
    "devDependencies": {
        "concurrently": "^9.0.0"
    }
}